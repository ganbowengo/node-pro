<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>异常页面</title>
    <style>
        html * {
            margin: 0 auto;
            padding: 0 auto;
            text-align: center;
        }

        .box {
            margin-top: 150px;
        }

        .code-left {
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="box">
        <img src="./image/warning.png">
        <table>
            <tr>
                <td class="left">错误代码为：</td>
                <td id="error" class="code-left"></td>
            </tr>
            <tr>
                <td class="left">错误信息为：</td>
                <td id="msg" class="code-left"></td>
            </tr>
        </table>
        <!--<div class="code">-->
            <!--<div class="code-title"></div>-->
            <!--<span id="error"></span></div>-->
        <!--<div class="code">-->
            <!--<div class="code-title">错误信息为：</div>-->
            <!--<span id="msg"></span>-->
        <!--</div>-->
    </div>
    <script src="./js/jquery.js"></script>

    <script>
        function getQueryVariable(variable) {
            var query = window.location.search.substring(1)
            var vars = query.split('&')
            for (var i = 0; i < vars.length; i++) {
                var pair = vars[i].split('=')
                if (pair[0] == variable) { return pair[1] }
            }
            return ''
        }
        function init() {
            var errCode = getQueryVariable('errorCode')
            var errMsg = decodeURIComponent(getQueryVariable('errorMsg'))
            $('#error').html(errCode || '500')
            $('#msg').html(errMsg || "系统异常")
        }
        $(function () {
            init()
        })
    </script>
</body>

</html>